                         <input type="url" class="form-control" id="IMAGEN" name="IMAGEN" placeholder="URL">
                     </div>
                     <div class="form-group">
                         <input type="text" class="form-control" id="ISBN" name="ISBN" placeholder="ISBN">
                     </div>
                     <div class="form-group">
                         <button type="submit" class="btn btn-success btn-block"  id="btnAgregarU"> 
                             Agregar
                         </button>
                         
                     </div>
                 </form>
                 </div>
            </div>
        </div>
    </div>
</div>

